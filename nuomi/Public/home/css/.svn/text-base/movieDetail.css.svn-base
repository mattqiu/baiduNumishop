*{
	margin:0px;
	padding:0px;
	list-style:none;
	text-decoration:none;
}
.wrap{
	width:980px;
	margin:0 auto;
}
.clear{clear:both}


#movie-details-main{width:100%;}
	.movie-head .box ul{width:980px;height:48px;line-height:48px;display:block;border-bottom:1px solid #ddd;margin:0 auto}
	.movie-head .box ul li{float:left;margin-right:30px}
	.movie-head .box ul li a{font-size:15px;color:#000;padding:12px 10px;}
	.movie-head .box ul li a:hover{color:blue}

	 .path{width:740px;float:left}
	.path ul{height:48px;line-height:48px;display:block;}
	.path li{float:left;margin-right:10px}
	.path ul li a{font-size:16px;color:#666;padding:10px 0px;}

	
	.detail-main-left{float:left;margin-top:5px;width:740px;}
				 .detail-main-left .left-img{float:left;display:block;height:220px;width:160px;border:1px solid #d2d2d2;}
				 .detail-main-left .content{width:560px;float:right;}
				 .detail-main-left .content h2 {color:#666;font-size:20px;}
					 				p{font-size:13px;}
					  .content .de{line-height:26px;margin-top:20px;}
					  .content .de span{color:#999999;padding-right:3px;}
					  .content .de ul{height:28px;line-height:26px;font-size:13px;}
					  .content .de ul li{float:left;margin-right:60px;}
					  .content .de .intro{line-height:24px;overflow:hidden;padding-right:20px;position:relative;}
					  .content .de .intro a{color:#73ADc9;margin-left:10px;}		  
					  .content .de .intro .c{color:#666666}	
	
	.detail-main-left .spec-nav{margin-top:30px;float:left;height:50px;line-height:50px;width:740px;background:#F9F9F9;border-bottom:1px solid red}
					  .spec-nav li{float:left;margin-right:20px}
					  .spec-nav ul li a{font-size:16px;color:#000;padding:17px 20px;}


		.w-filter{float:left;border-bottom:1px solid #ddd;padding-bottom:15px;}
		.w-filter .first{color:#333;}
		.w-filter .all{background:#ff4883;color:#fff;padding:6px 7px;margin-left:5px;}
		.w-filter .all:hover{color:#fff;background:#ff4883;}
		.w-filter .filter-date{
					height:30px;
					line-height:30px;
					margin-top:10px;
	
					}
				  .w-filter ul li{float:left;}
				  .w-filter li a{color:#666;font-size:13px;margin-left:14px;}
				  .w-filter li a:hover{background:#eee;}

	.filter-box{float:left;padding-top:15px;padding-bottom:15px;border-bottom:1px solid #ccc}
	.filter-box:hover{background:#eee;}
				.ci-basic{width:400px;float:left;}
				.ci-basic .basic-top{height:40px;line-height:40px;}
				.ci-basic .basic-bottom{height:40px;line-height:40px;}
				.ci-basic h3{float:left;color:#555}
				.ci-basic h5{float:right;color:#555}

				.ci-buy{float:left;width:340px;}
				.buy-top{height:20px;line-height:40px} 
				.buy-top .ci-price{margin-left:100px;color:#ff4883}
				.buy-top .tuangou{float:right;}
				.buy-top .tuangou a{color:#fff;font-size:14px;background:#ff4883;padding:5px 15px;}
				.buy-bottom{height:20px;line-height:0px;margin-top:40px} 
				.buy-bottom .price{margin-left:100px;color:#FE8A4B}
				.buy-bottom .gou{float:right;color:#fff;}
				.buy-bottom .gou a{color:#fff;font-size:14px;background:#FE8A4B;padding:5px 15px;}





	.detail-main-right{float:right;margin-top:20px;width:227px;}
	.movie-panel{height:240px;border-bottom:1px solid #ccc;color:#888}
	.movie-panel img{margin-top:10px;}
	.movie-panel .text{margin-top:10px;margin-bottom:15px;}
	.movie-panel .price{color:#ff4883;font-size:18px;}
	.movie-panel .ori-price{font-size:12px;}
	.movie-panel .sold{color:#ff4883;font-size:17px;text-decoration:none;float:right}

